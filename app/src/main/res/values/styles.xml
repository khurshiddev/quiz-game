    <style name="VariantTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/tropical_blue</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FilledButtonStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="HexagonStyle">
        <item name="shadowY">0dp</item>
        <item name="shadowX">2dp</item>
        <item name="shadowRadius">2dp</item>
        <item name="shadowColor">#EE5A5ACC</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>
    <style name="VariantButtonStyle">
        <item name="shadowY">0dp</item>
        <item name="shadowX">1dp</item>
        <item name="shadowRadius">1dp</item>
        <item name="shadowColor">@color/cloudy_blue</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>
</resources>
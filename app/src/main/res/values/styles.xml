<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SelectedButtonStyle">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:rotation">-32</item>
        <item name="android:src">@drawable/img_selected_btn</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="SelectedTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

